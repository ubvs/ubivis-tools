# Keycloak OIDC Configuration
AUTH_OIDC_CLIENT_ID=dashboard
AUTH_OIDC_CLIENT_SECRET=your-keycloak-client-secret-here
AUTH_OIDC_ADMIN_ROLE=/Administrators
AUTH_OIDC_OWNER_ROLE=/Administrators

# Required: Generate with: openssl rand -base64 32
AUTH_SECRET=generate-random-secret-here

# =============================================================================
# INFISICAL CONFIGURATION
# =============================================================================

# Infisical connection settings
INFISICAL_SITE_URL=http://localhost:8081
INFISICAL_PROJECT_ID=<your-project-id-here>
INFISICAL_ENVIRONMENT=Development

# Machine Identity credentials (get these from Infisical)
INFISICAL_CLIENT_ID=<machine-identity-client-id>
INFISICAL_CLIENT_SECRET=<machine-identity-client-secret>